<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import pl.projectE.ui.NumberLabel?>
<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.projectE.ui.MainWindowController"
          stylesheets="/fxml/main.css">
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <MenuBar maxWidth="Infinity" maxHeight="Infinity">
        <Menu text="Start">
            <MenuItem text="2010" onAction="#get2010Scenario"/>
        </Menu>
    </MenuBar>
    <ComboBox fx:id="countriesList" GridPane.rowIndex="1" onAction="#loadCountry"/>
    <TabPane GridPane.rowIndex="2" maxHeight="Infinity" maxWidth="Infinity">
        <Tab closable="false" text="Tax">
            <GridPane hgap="5" vgap="5">
                <Label text="PIT"/>
                <Label text="Tax rate" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="Margin" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Label text="Low" GridPane.rowIndex="2"/>
                <Label text="Medium" GridPane.rowIndex="3"/>
                <Label text="High" GridPane.rowIndex="4"/>
                <HBox GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <NumberLabel fx:id="pitLow" styleClass="int-label"/>
                </HBox>
                <HBox GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <NumberLabel fx:id="pitMed" styleClass="int-label"/>
                </HBox>
                <HBox GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <NumberLabel fx:id="pitHigh" styleClass="int-label"/>
                </HBox>
                <HBox GridPane.rowIndex="2" GridPane.columnIndex="2">
                    <NumberLabel fx:id="marginLow" styleClass="int-label"/>
                </HBox>
                <HBox GridPane.rowIndex="3" GridPane.columnIndex="2">
                    <NumberLabel fx:id="marginMed" styleClass="int-label"/>
                </HBox>
                <Label text="Payroll" GridPane.rowIndex="5"/>
                <HBox GridPane.rowIndex="5" GridPane.columnIndex="1">
                    <NumberLabel fx:id="payroll" styleClass="int-label"/>
                </HBox>
                <Label text="CIT" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <HBox GridPane.rowIndex="6" GridPane.columnIndex="1">
                    <NumberLabel fx:id="cit" styleClass="int-label"/>
                </HBox>
                <Label text="Redundancy" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                <HBox GridPane.rowIndex="1" GridPane.columnIndex="4">
                    <NumberLabel fx:id="redundancy" styleClass="int-label"/>
                </HBox>
                <Label text="VAT" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                <HBox GridPane.rowIndex="2" GridPane.columnIndex="4">
                    <NumberLabel fx:id="vat" styleClass="int-label"/>
                </HBox>
                <Label text="Sales tax" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
                <HBox GridPane.rowIndex="3" GridPane.columnIndex="4">
                    <NumberLabel fx:id="salesTax" styleClass="int-label"/>
                </HBox>
                <Label text="Tariffs" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
                <HBox GridPane.rowIndex="4" GridPane.columnIndex="4">
                    <NumberLabel fx:id="tariffs" styleClass="int-label"/>
                </HBox>
                <Label text="From land ownership" GridPane.rowIndex="5" GridPane.columnIndex="3"/>
                <HBox GridPane.rowIndex="5" GridPane.columnIndex="4">
                    <NumberLabel fx:id="landOwnership" styleClass="int-label"/>
                </HBox>
                <Label text="Improvements to land" GridPane.rowIndex="6" GridPane.columnIndex="3"/>
                <HBox GridPane.rowIndex="6" GridPane.columnIndex="4">
                    <NumberLabel fx:id="improvementsToLand" styleClass="int-label"/>
                </HBox>
                <Label text="From movable property" GridPane.rowIndex="1" GridPane.columnIndex="5"/>
                <HBox GridPane.rowIndex="1" GridPane.columnIndex="6">
                    <NumberLabel fx:id="movableProperty" styleClass="int-label"/>
                </HBox>
                <Label text="Inheritance" GridPane.rowIndex="2" GridPane.columnIndex="5"/>
                <HBox GridPane.rowIndex="2" GridPane.columnIndex="6">
                    <NumberLabel fx:id="inheritance" styleClass="int-label"/>
                </HBox>
                <Label text="Capital gains" GridPane.rowIndex="3" GridPane.columnIndex="5"/>
                <HBox GridPane.rowIndex="3" GridPane.columnIndex="6">
                    <NumberLabel fx:id="capitalGains" styleClass="int-label"/>
                </HBox>
                <Label text="Financial transactions" GridPane.rowIndex="4" GridPane.columnIndex="5"/>
                <HBox GridPane.rowIndex="4" GridPane.columnIndex="6">
                    <NumberLabel fx:id="financialTransactions" styleClass="int-label"/>
                </HBox>
                <Label text="Tolls" GridPane.rowIndex="5" GridPane.columnIndex="5"/>
                <HBox GridPane.rowIndex="5" GridPane.columnIndex="6">
                    <NumberLabel fx:id="tolls" styleClass="int-label"/>
                </HBox>
                <Label text="Crime fees" GridPane.rowIndex="6" GridPane.columnIndex="5"/>
                <HBox GridPane.rowIndex="6" GridPane.columnIndex="6">
                    <NumberLabel fx:id="crimeFees" styleClass="int-label"/>
                </HBox>
            </GridPane>
        </Tab>
    </TabPane>
</GridPane>
