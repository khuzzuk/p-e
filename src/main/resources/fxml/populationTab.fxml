<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import pl.projectE.ui.NumberLabel?>
<?import javafx.scene.control.Label?>
<Tab closable="false" text="Pop" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.projectE.ui.controllers.PopulationViewController">
    <GridPane hgap="5" vgap="5">
        <HBox>
            <NumberLabel fx:id="population" styleClass="int-label"/>
        </HBox>
        <HBox GridPane.rowIndex="1">
            <NumberLabel fx:id="laborForce" styleClass="int-label"/>
        </HBox>
        <HBox GridPane.rowIndex="2">
            <NumberLabel fx:id="retired" styleClass="int-label"/>
        </HBox>
        <HBox GridPane.rowIndex="3">
            <NumberLabel fx:id="children" styleClass="int-label"/>
        </HBox>
        <HBox GridPane.rowIndex="4">
            <NumberLabel fx:id="nonLaborForceRatio" styleClass="int-label"/>
        </HBox>
        <HBox GridPane.rowIndex="5">
            <NumberLabel fx:id="activeWorkForce" styleClass="int-label"/>
        </HBox>
        <HBox GridPane.rowIndex="6">
            <NumberLabel fx:id="popPerSqKm" styleClass="int-label"/>
        </HBox>
    </GridPane>
</Tab>
